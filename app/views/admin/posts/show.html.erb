<section class="inner">
	<h2 class="section-ttl">投稿詳細</h2>
	<div class="flex">
		<table class="admin_post_info">
			<thead>
				<tr>
					<th></th>	
					<th></th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>ニックネーム</td>
					<td><%= @post.nickname %></td>
				</tr>
				<tr>
					<td>タイトル</td>
					<td><%= @post.title %></td>
				</tr>
				<tr>
					<td>本文</td>
					<td><%= @post.text %></td>
				</tr>
				<div>
			<div class="comment">
				<%= render "public/post_comments/index_admin", post: @post %>
			</div>
		</div>
			</tbody>
		</table>
		<div>
			<div class="image_field">
				<%= image_tag @post.get_image, size:'300x200', id: "img_prev", class: "admin_post_image" %><br>
				<% @post.vision_api_tags.each do |vision_api_tag| %>
				<span class="label"><%= vision_api_tag.name %></span>
				<% end %>
			</div>
		</div>
		<div class="flex align-center pl5">
			<%= link_to "編集する", edit_admin_post_path(@post), class: "btn btn-success" %>
		</div>
	</div>
</section>