<div class="row">
  	<div class="col-1">
  	</div>
  	<div class="col-8 mt-3">
  	  <table class="table">
  	  <thead>
  	  	<tr>
  	  		<th style="background-color: #F2F2F2;">タイトル</th>
  	  		<th style="background-color: #F2F2F2;">本文</th>
  	  		<th style="background-color: #F2F2F2;">画像</th>
  	  	</tr>
  	  </thead>
  	  <tbody>
  	   <% news_letters.each do |admin_news_letter| %>
  	     <tr>
  	     	<td align="center"><%= link_to news_letter.news_title, admin_news_letter_path(news_letter), class: "underline" %></td>
  	     	<td align="center"><%= news_letter.news_text %></td>
  	     	<td align="center"><%= image_tag news_letter.image, size:'300x200' %></td>
  	     </tr>
  	   <% end %>
  	  </tbody>
  	</table>
  </div>
 </div>