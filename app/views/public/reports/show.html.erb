<div class="row justify-content-center align-items-center mb-4">
  <div class="col-md-4 text-center">
    <h4 class="mt-3"><strong><%= @customer.first_name %> <%= @customer.last_name %></strong></h4>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-md-6">
    <h3 class="text-center">会員情報編集</h3>
    <div class="form-group text-center">
      <div class="mt-3">
        <strong>通報された回数：</strong>
        <%= Report.reported_count(@customer.id) %>
      </div>
    </div>
    <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
      <div class="form-group text-center">
        <br>
        <div class="custom-control custom-radio custom-control-inline">
          <%= f.radio_button :customer_status, :available, id: "customer_status_0", class: "custom-control-input" %>
          <%= f.label I18n.t("enums.customer.customer_status.available"), class: "custom-control-label", for: "customer_status_0" %>
        </div>
        <div class="custom-control custom-radio custom-control-inline">
          <%= f.radio_button :customer_status, :suspended, id: "customer_status_1", class: "custom-control-input" %>
          <%= f.label I18n.t("enums.customer.customer_status.suspended"), class: "custom-control-label", for: "customer_status_1" %>
        </div>
      </div>
      <div class="form-group text-center">
        <%= f.submit "ステータスを更新", class: "btn btn-primary mx-auto" %>
      </div>
    <% end %>
  </div>
</div>