<section class="inner">
	<h2 class="section-ttl">投稿詳細</h2>
	<div class="flex">
		<table class="post_info">
			<thead>
				<tr>
					<th></th>	
					<th></th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>ニックネーム</td>
					<td><%= @post.nickname %></td>
				</tr>
				<tr>
					<td>タイトル</td>
					<td><%= @post.title %></td>
				</tr>
				<tr>
					<td>本文</td>
					<td><%= @post.text %></td>
				</tr>
				<tr>
					<td>タグ</td>
					<td>
					  <div class="tags">
                      <% if @tags.present? %>
                      <div class="d-flex flex-wrap">
                      <% @tags.each do |tag| %>
	                  <span class="badge badge-info mr-2 mb-2">
	                  <%= link_to "#{tag.name}(#{tag.taggings_count})", tag_path(tag.name), class: "text-white" %>
	                  </span>
                      <% end %>
                      </div>
                      <% else %>
                      <p>登録されているタグはありません</p>
                      <% end %>
                      </div>	
					</td>
				</tr>
				<tr>
					<td>コメント数： <%= @post.post_comments.count %></td>
					<td>
					  <%= render "public/post_comments/index", post: @post %>
                      <%= render "public/post_comments/form", post: @post, post_comment: @post_comment %>
					</td>
				</tr>
			</tbody>
		</table>
		<div>
			<div class="image_field">
				<%= image_tag @post.get_image, size:'300x200', id: "img_prev", class: "admin_post_image" %>
			</div>
		</div>
		<div class="flex align-center pl5">
			<%= link_to "編集する", edit_post_path(@post), class: "btn btn-success" %>
		</div>
	</div>
</section>