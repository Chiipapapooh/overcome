<table class="posts has_border">
	<thead>
		<tr>
			<th>ニックネーム</th>
			<th>タイトル</th>
			<th>本文</th>
			<th>画像</th>
		</tr>
	</thead>
	<tbody>
		<% posts.each do |post| %>
			<tr>
				<td class="text-center"><%= post.nickname %></td>
				<td><%= link_to post.title, post_path(post), class: "underline" %></td>
				<td class="text-center"><%= post.text %></td>
				<td class="text-center"><%= image_tag post.get_image, size:'300x200' %></td>
				
			</tr>
		<% end %>
	</tbody>
</table>