<section class="inner">
  <% if flash[:notice] %>
    <p class="text-active"><%= flash[:notice] %></p>
  <% end %>
	<h2 class="section-ttl">マイページ</h2>
	<h3>
		登録情報
		<%= link_to "編集する", edit_information_path, class: "btn btn-success ml2" %>
		<%= link_to "パスワードを変更する", edit_customer_registration_path, class: "btn btn-success ml2" %>
	</h3>
	<table class="customer_info mb3">
		<thead>
			<th></th>
			<th></th>
			<th></th>
		</thead>
		<tbody>
			<tr>
				<td>名前</td>
				<td><%= @customer.last_name %> <%= @customer.first_name %></td>
			</tr>
			<tr>
				<td>フリガナ</td>
				<td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
			</tr>
			<tr>
				<td>ニックネーム</td>
				<td><%= @customer.nickname %></td>
			</tr>
			<tr>
				<td>メールアドレス</td>
				<td colspan="2"><%= @customer.email %></td>
			</tr>
		</tbody>
	</table>
</section>

<section class="wrapper flex">
	<div class="inner">
		<h2 class="section-ttl">投稿一覧 (全<%= @all_posts_count %>件)</h2>
		<table class="posts has_border">
			<thead>
				<tr>
					<th>投稿ID</th>
			        <th>タイトル</th>
			        <th>本文</th>
			        <th>画像</th>
			        <th>投稿ステータス</th>
		        </tr>
	        </thead>
	    <tbody>
		<% @posts.each do |post| %>
		<tr>
			<td class="text-center"><%= post.id %></td>
			<td><%= link_to post.title, post_path(post), class: "underline" %></td>
			<td class="text-center"><%= post.text %></td>
			<td><%= image_tag post.image, size:'300x200' %></td>
			<td>公開ステータス</td>
					<% if post.is_draft == true %>
					<td>下書き</td>
					<% else %>
					<td>公開中</td>
					<% end %>
					<td></td>
		</tr>
		<% end %>
	    </tbody>
        </table>
	</div>
</section>

